@model InventoryManagementWebApp.DTOs.CategoriaDTO;

<title>Editar Categorías</title>
<link rel="stylesheet" href="~/css/form.css" />
<link rel="stylesheet" href="~/css/button.css" />
<link rel="stylesheet" href="~/css/alert.css" />

<section class="container">
    <div class="grid-layout">
        <main class="form-container">
            <div class="form-content">
                <h1 class="form-title">Editar Categoría</h1>

                <form class="form-grid" asp-controller="Categoria" asp-action="Edit" method="post">

                    <!-- Inputs -->
                    <div class="input-group full">
                        <label for="FirstName" class="label"> Categoría </label>
                        <input type="text" id="FirstName" class="input" asp-for="Nombre" required />
                    </div>

                    <div class="input-group full">
                        <label for="FirstName" class="label"> Descripción </label>
                        <textarea id="FirstName" class="input" style="height: 110px" asp-for="Descripcion">
                        </textarea>
                    </div>

                    <!-- Botones -->
                    <div class="form-actions">
                        <button class="btn btn-primary" type="submit"> Actualizar </button>
                    </div>

                    <!-- Alertas -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success text-center" role="alert">
                            @TempData["Success"]
                        </div>
                    }

                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning text-center" role="alert">
                            @TempData["Warning"]
                        </div>
                    }

                </form>

            </div>
        </main>
    </div>
</section>