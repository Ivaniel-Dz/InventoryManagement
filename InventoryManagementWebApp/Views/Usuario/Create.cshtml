@model InventoryManagementWebApp.ViewModels.User;

@{
    Layout = null;
}
<title>Registro Nuevo</title>
<link rel="stylesheet" href="~/css/register.css" />

<section class="container">
  <div class="grid-layout">
    <main class="form-container">
      <div class="form-content">
        <h1 class="form-title">Crear Cuenta</h1>

        <form class="form-grid" asp-controller="Usuario" asp-action="Create" method="post" >
          <div class="input-group full">
            <label for="FirstName" class="label">Nombre Completo</label>
            <input type="text" id="FirstName" class="input" asp-for="Nombre" required/>
          </div>

          <div class="input-group full">
            <label for="Email" class="label">Correo</label>
            <input type="email" id="Email" class="input" asp-for="Correo" required/>
          </div>

          <div class="input-group">
            <label for="Password" class="label">Contraseña</label>
            <input type="password" id="Password" class="input" asp-for="Password" required />
          </div>

          <div class="input-group">
            <label for="PasswordConfirmation" class="label">Confirme Contraseña</label>
            <input type="password" id="PasswordConfirmation" class="input" asp-for="ConfirPassword" required/>
          </div>

          <div class="input-group">
            <button class="btn" type="submit">Crear cuenta</button>
          </div>

          <div class="input-group">
              <p class="text"> ¿Ya tienes una cuenta?
                <a class="link" asp-controller="Acceso" asp-action="Login">Inicia sesión</a>.
            </p>
          </div>

           @if (TempData["Mensaje"] != null)
           {
              <div class="alerta" role="alert">
               @TempData["Mensaje"]
              </div>
           }

        </form>
      </div>
    </main>
  </div>
</section>
