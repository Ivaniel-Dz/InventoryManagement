@model InventoryManagementWebApp.Models.Usuario;

<title>Registro Nuevo</title>
<link rel="stylesheet" href="~/css/form.css" />

<section class="container">
    <div class="grid-layout">
        <main class="form-container">
            <div class="form-content">
                <h1 class="form-title">Actualizar Usuario</h1>

                <form class="form-grid" asp-controller="Usuario" asp-action="Edit" method="post">
                    <div class="input-group full">
                        <label for="FirstName" class="label">Nombre Completo</label>
                        <input type="text" id="FirstName" class="input" asp-for="Nombre" required />
                    </div>

                    <div class="input-group full">
                        <label for="Email" class="label">Correo</label>
                        <input type="email" id="Email" class="input" asp-for="Correo" required />
                    </div>

                    <div class="input-group full">
                        <label for="Password" class="label">Contraseña</label>
                        <input type="password" id="Password" class="input" asp-for="Password" />
                    </div>

                    <div class="input-group">
                        <button class="btn-pr" type="submit">Actualizar</button>
                    </div>

                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning text-center" role="alert">
                            @TempData["Warinig"]
                        </div>
                    }

                </form>
                    
                <form asp-controller="Usuario" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <button class="btn-pr" data-mdb-button-init data-mdb-ripple-init type="submit">Elminar</button>
                </form>

            </div>
        </main>
    </div>
</section>