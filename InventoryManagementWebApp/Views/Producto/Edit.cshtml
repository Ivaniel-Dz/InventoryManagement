@model InventoryManagementWebApp.DTOs.ProductoDTO

<title>Editar Producto</title>
<link rel="stylesheet" href="~/css/form.css" />
<link rel="stylesheet" href="~/css/button.css" />
<link rel="stylesheet" href="~/css/alert.css" />

<section class="container">
    <div class="grid-layout">
        <main class="form-container" style="padding: 0px">
            <div class="form-content">
                <h1 class="form-title">Editar Producto en Stock</h1>

                <form class="form-grid" asp-controller="Producto" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="input-group full">
                        <label for="FirstName" class="label">Producto</label>
                        <input type="text" id="FirstName" class="input" asp-for="Nombre" required />
                    </div>

                    <div class="input-group full">
                        <label for="CategoriaId" class="label">Categoria</label>
                        <select class="input" asp-for="CategoriaId">
                            <option value=""> Seleccione una Categoría </option>
                            @foreach (var item in Model.Categorias)
                            {
                                <option value="@item.Id">@item.Nombre</option>
                            }
                        </select>
                    </div>

                    <div class="input-group">
                        <label for="compra" class="label">Precio de Compra</label>
                        <input type="number" id="compra" class="input" asp-for="PrecioCompra" required />
                    </div>

                    <div class="input-group">
                        <label for="venta" class="label">Precio de Ventas</label>
                        <input type="number" id="venta" class="input" asp-for="PrecioVenta" required />
                    </div>

                    <div class="input-group">
                        <label for="stock" class="label">Cantidad en Stock</label>
                        <input type="number" id="stock" class="input" asp-for="CantidadStock" required />
                    </div>

                    <div class="input-group">
                        <label for="codigo" class="label">Codigo de Producto</label>
                        <input type="text" id="codigo" class="input" asp-for="CodigoProducto" required />
                    </div>

                    <div class="input-group full">
                        <label for="venta" class="label">Descripción</label>
                        <textarea id="venta" class="input" style="height: 50px" asp-for="Descripcion"></textarea>
                    </div>

                    <div class="form-actions">
                        <a class="btn btn-secondary" asp-controller="Producto" asp-action="Index">Regresar</a>
                        <button class="btn btn-primary" type="submit">Confirmar</button>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success text-center" role="alert">
                            @TempData["Success"]
                        </div>
                    }

                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning text-center" role="alert">
                            @TempData["Warning"]
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert input-group full validation-summary-errors">
                            @Html.ValidationSummary()
                        </div>
                    }

                </form>
            </div>
        </main>
    </div>
</section>