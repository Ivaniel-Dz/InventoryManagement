@model List<SistemaInventario.Models.Role>;

<title> Tabla de Roles </title>

<link rel="stylesheet" href="~/css/table.css" />
<link rel="stylesheet" href="~/css/button.css" />
<link rel="stylesheet" href="~/css/alert.css" />

<div class="table-container">

    <h2 class="table-title"> Lista Roles </h2>
    <div class="header-table">
        <div class="btn-container">
            <a asp-controller="Rol" asp-action="Create" class="btn btn-primary">Rol Nuevo</a>
        </div>

        <!-- Input de Busqueda -->
        <form asp-controller="Search" asp-action="BuscarRol" method="get">
            <input type="text" name="term" placeholder="Buscar..." class="search-input">
        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th> Id </th>
                <th> Rol </th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.Rol</td>
                        <td>
                            <a class="icon-btn btn-edit" asp-controller="Rol" asp-action="Edit" asp-route-id="@item.Id">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                                </svg>
                            </a>
                            <a class="icon-btn btn-delete" asp-controller="Rol" asp-action="Delete" asp-route-id="@item.Id">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning text-center" role="alert">
            @TempData["Warning"]
        </div>
    }

</div>
