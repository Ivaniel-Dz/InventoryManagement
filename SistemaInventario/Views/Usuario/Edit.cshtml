@model SistemaInventario.ViewModels.UsuarioVM;

<title>Registro Nuevo</title>
<link rel="stylesheet" href="~/css/form.css" />
<link rel="stylesheet" href="~/css/button.css" />
<link rel="stylesheet" href="~/css/alert.css" />

<section class="container">
    <div class="grid-layout">
        <main class="form-container">
            <div class="form-content">
                <h1 class="form-title">Actualizar Usuario</h1>

                <form class="form-grid" asp-controller="Usuario" asp-action="Edit" method="post">
                    <div class="input-group full">
                        <label for="FirstName" class="label">Nombre Completo</label>
                        <input type="text" id="FirstName" class="input" asp-for="Nombre" required />
                    </div>

                    <div class="input-group full">
                        <label for="Email" class="label">Correo</label>
                        <input type="email" id="Email" class="input" asp-for="Correo" required />
                    </div>

                    <div class="input-group full">
                        <label for="Password" class="label">Contraseña</label>
                        <input type="password" id="Password" class="input" asp-for="Password" />
                    </div>

                    <div class="form-actions">
                        <!-- Botón para Actualizar -->
                        <button class="btn btn-primary" type="submit">Actualizar</button>
                        <!-- Botón de Eliminar con confirmación -->
                        <button class="btn btn-danger" type="button"
                                onclick="if(confirm('¿Estás seguro de eliminar este usuario?')) { document.getElementById('deleteForm').submit(); }">
                            Eliminar
                        </button>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success text-center" role="alert">
                            @TempData["Success"]
                        </div>
                    }

                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning text-center" role="alert">
                            @TempData["Warning"]
                        </div>
                    }

                </form>

                <!-- Formulario oculto para eliminación -->
                <form id="deleteForm" asp-controller="Usuario" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: none;">
                </form>

            </div>
        </main>
    </div>
</section>